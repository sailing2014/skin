<div class="cfCon">
   <div class="cfbox">
       <table width="100%" border="0" cellpadding="0" cellspacing="0" class="cfTable">
         <tbody>  
    <tr>
      <th>成分名称</th>
      <th>功效成分</th>
      <th>易致痘成分</th>
      <th>易致敏成分</th>
      <th style="border:none;">孕哺期慎用</th>
    </tr>   
   {% for index,v in components%}
    <tr>
        {% if index is even%}
            <td> <a href="../product/element/{{v["component_id"]}}?pid={{pid}}&token={{token}}">{{v["title"]}}</a></td>
           <td>{% if v['active'] %}<i class="yse">{% endif %}</i></td>
           <td>{% if v['acne_risk'] %}<i class="yse">{% endif %}</i></td>
           <td>{% if v['sensitization'] %}<i class="yse">{% endif %}</td>
           <td>{% if v['safety'] %}<i class="yse">{% endif %}</td>
      {% else %}
            <th> <a href="../product/element/{{v["component_id"]}}?pid={{pid}}&token={{token}}">{{v["title"]}}</a></th>
            <th>{% if v['active'] %}<i class="yse">{% endif %}</i></th>
            <th>{% if v['acne_risk'] %}<i class="yse">{% endif %}</i></th>
            <th>{% if v['sensitization'] %}<i class="yse">{% endif %}</i></th>
            <th style="border:none;">{% if v['safety'] %}<i class="yse">{% endif %}</i></th>
      {% endif %}
    </tr> 
    {% endfor %}
